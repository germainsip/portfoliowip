{% extends 'base.html.twig' %}

{% block title %}Mon Portfolio{% endblock %}

{% block body %}

<!-- introduction -->
    <p class="text-center text-lg font-semibold text-white">Ici vous trouverez tous mes travaux. Enfin, ceux que je
        partage avec vous...</p>
    <p class="text-center text-lg font-semibold text-white">Des Cours, des travaux, des idées...</p>
    <br>
    <!-- test typewriter -->
    <div class="w-1/2 mx-auto">
        {% include 'widgets/terminal.html.twig' %}

    </div>
    <!-- fin test -->
    <br>
    <p class="text-center text-lg font-semibold text-white">Sincèrement Germain SIPIERE <a class="text-yellow-500"
                                                                                           href="mailto:gsipiere@gmail.com?subject=contact">gsipiere@gmail.com</a>
    </p>
    <br>
    <p class="text-center text-lg font-semibold text-white">- &hearts;&hearts;&hearts; -</p>

    <!-- fin intro -->
<!-- liste 4 videos -->
    <div class="m-10 flex space-x-4">
        <div class="flex-col w-full lg:w-2/3 space-y-3">
            <h1 class="text-4xl font-extrabold text-white underline mb-6">Les 4 dernières vidéos... </h1>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {% for cour in coursVideos %}
                    {% include 'widgets/videocard.html.twig' %}
                {% endfor %}
            </div>
        </div>
        <div class="hidden lg:block w-1/3 flex-wrap bg-blob-card bg-no-repeat bg-contain bg-center text-center self-center justify-around p-10">
            <img class="self-center" src="img/livre.png" alt="">
        </div>


    </div>
    <!-- fin liste videos -->
    <!-- divider -->
    <div class="transform translate-y-1 h-44 lg:h-48 bg-wave-inv bg-no-repeat bg-cover"></div>
    <p class="bg-white p-3 text-center text-2xl">&#9786; Mais aussi des applications &#9786;</p>
    <div class="transform -translate-y-1 h-28 bg-wave-nav bg-no-repeat bg-cover w-full"></div>
    <!-- fin divider -->
    <!-- liste 4 depots -->
    <div class="m-10 flex space-x-4">
        <div class="hidden lg:block w-1/3 flex-wrap bg-blob-card bg-no-repeat bg-contain bg-center text-center self-center justify-around p-10">
            <img src="img/salut.png" alt="">
        </div>
        <div class="flex-col w-full lg:w-2/3 space-y-3">

            <h1 class="text-4xl font-extrabold text-white underline mb-6">Les 4 derniers projets... </h1>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {% for depo in depos %}
                   {% include 'widgets/depocard.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- fin liste depots -->


{% endblock %}
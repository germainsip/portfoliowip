{% extends 'base.html.twig' %}
{% block title "Mes Vid√©os" %}
{% block body %}
    <div class="mb-6 px-10">
        <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <!-- terminal -->
            {% include 'widgets/terminal.html.twig' %}
            <!-- fin terminal -->
            {% for cour in coursVideos %}

                <div class="bg-blue-300 rounded-2xl shadow">

                    <div class="bg-white p-2 transform -translate-x-2 -translate-y-2 shadow-lg hover:shadow-2xl {{ (admin)? : "transform hover:-rotate-3"}} rounded-2xl">
                        {% if admin %}
                            <a href="{{ path('app_delete_video',{'id':cour.id}) }}"
                               class="bg-red-600 text-white rounded-full absolute right-0 top-0 transform translate-x-1 -translate-y-1 hover:shadow-2xl">
                                <svg class="text-white w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </a>
                        {% endif %}
                        <h2 class="text-xl font-semibold">

                            {{ cour.name }}
                        </h2>
                        <a href="{{ path('app_video',{'id':cour.id}) }}">
                            <img class="" src="{{ cour.url | youtube_thumbnail }}" alt="">

                        </a>
                        <p class="p-1">{{ cour.description }}</p>

                    </div>
                </div>

            {% endfor %}

            {% if admin %}
                <div>
                    {{ form(form) }}
                </div>
            {% endif %}

        </div>
    </div>
    <script src="/js/terminal1.js">

    </script>
{% endblock %}